#define CASE=14
#ifexists "../case.glm"
#define DIR=..
#endif

// #set debug=TRUE
// #set suppress_repeat_messages=FALSE

module pypower
{
    maximum_timestep 3600;
    save_case TRUE;
}

module tape
{
    csv_header_type NAME;
}

object pypower.load
{
    parent pp_bus_2;
    Vn 12.5 kV;
    object player
    {
        file "${modelname/powerplant.glm/load}_pp_bus_2.csv";
    };
    status ONLINE;
}

object pypower.powerplant
{
    parent pp_bus_2;
    S 10.0;
    status ONLINE;
}

#include "${DIR:-.}/case.glm"

object recorder
{
    parent pp_bus_2;
    property S,Pd,Qd,Gs,Bs,Vm,Va;
    interval 3600;
    file "${modelname/.glm/}_pp_bus_2_record.csv";
}
